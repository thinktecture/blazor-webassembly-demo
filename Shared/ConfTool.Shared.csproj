<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <Protobuf_ToolsOs Condition="'$([MSBuild]::IsOsPlatform(OSX))'">macosx</Protobuf_ToolsOs>
  </PropertyGroup>
    
  <ItemGroup>
    <PackageReference Include="FluentValidation" Version="9.4.0" />
    <PackageReference Include="System.ServiceModel.Primitives" Version="4.8.0" />
    <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
    <PackageReference Include="Grpc.Net.Client" Version="2.34.0" />
    <PackageReference Include="Google.Protobuf" Version="3.14.0" />
    <PackageReference Include="Grpc.Tools" Version="2.35.0">
    <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="protobuf-net.Grpc" Version="1.0.147" />
  </ItemGroup>
    
  <ItemGroup>
    <Protobuf Include="Protos\GreeterService.proto" GrpcServices="Both" />
    <Protobuf Include="Protos\CounterService.proto" GrpcServices="Both" />
    <Protobuf Include="Protos\ConferencesService.proto" GrpcServices="Both" />
  </ItemGroup>
    
  <ItemGroup>
    <Folder Include="DTO\" />
  </ItemGroup>    
</Project>
